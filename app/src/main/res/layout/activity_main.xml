<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_wrapBehaviorInParent="horizontal_only"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="inherit"
        android:layoutMode="clipBounds"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="0">

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/OperatorView"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text='+'
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_row="0" />

        <EditText
            android:id="@+id/NumberInput"
            android:layout_width="138dp"
            android:layout_height="103dp"
            android:bufferType="normal"
            android:ems="15"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="0" />

        <EditText
            android:id="@+id/NumberInput2"
            android:layout_width="78dp"
            android:layout_height="100dp"
            android:ems="15"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            app:layout_column="2"
            app:layout_row="0" />

        <TextView
            android:id="@+id/ResultView"
            android:layout_width="103dp"
            android:layout_height="32dp"
            android:text="= ?"
            android:textSize="20sp"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/PlusButton"
            style="@android:style/Widget.Button"
            android:layout_width="142dp"
            android:layout_height="93dp"
            android:background="#FFEB3B"
            android:backgroundTint="#FF5722"
            android:onClick="changeAction"
            android:shadowColor="#FF5722"
            android:text="+"
            android:textColor="@color/white"
            android:textColorLink="#B61A1A"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="1"
            app:layout_rowSpan="2"
            app:rippleColor="#EF2626"
            app:strokeColor="#03A9F4" />

        <Button
            android:id="@+id/DevideButton"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:onClick="changeAction"
            android:text="/"
            android:textSize="20sp"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/MinusButton"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:onClick="changeAction"
            android:text="-"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_columnSpan="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/MultButton"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:onClick="changeAction"
            android:text="*"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_columnSpan="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/ClearButton"
            style="@style/Widget.Material3.Button"
            android:layout_width="391dp"
            android:layout_height="85dp"
            android:onClick="clearNums"
            android:text="ะก"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_columnSpan="4"
            app:layout_row="5" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>